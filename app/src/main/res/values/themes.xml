<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Scenique_App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#011e36</item>
        <item name="colorPrimaryVariant">#011e36</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FF4081</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">#2E2D32</item>
        <item name="android:windowMinWidthMajor">80%</item>
    </style>

    <style name="DialogTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.DeviceDefault.Light.RatingBar.Small">
        <item name="android:minHeight">36dp</item>
        <item name="android:maxHeight">36dp</item>
    </style>


</resources>