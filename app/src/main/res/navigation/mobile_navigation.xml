<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <action android:id="@+id/action_global_navigation_map"
        app:destination="@id/navigation_map" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.sam.scenique_app.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.sam.scenique_app.ui.maps.ReviewMapFragment"
        android:label="Map"
        tools:layout="@layout/fragment_review_map" />

    <fragment
        android:id="@+id/navigation_camera"
        android:name="com.sam.scenique_app.ui.camera.CameraFragment"
        android:label="Camera"
        tools:layout="@layout/fragment_camera" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.sam.scenique_app.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/navigation_aboutus"
        android:name="com.sam.scenique_app.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_about_us" />

    <fragment
        android:id="@+id/navigation_faq"
        android:name="com.sam.scenique_app.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_faq" />


</navigation>